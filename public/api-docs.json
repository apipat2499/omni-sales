    "contact": {
      "name": "Omni-Sales API Support",
      "email": "api@omni-sales.com"
    },
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "servers": [
    {
      "url": "http://localhost:3000/api",
      "description": "Development server (เซิร์ฟเวอร์สำหรับพัฒนา)"
    },
    {
      "url": "https://api.omni-sales.com",
      "description": "Production server (เซิร์ฟเวอร์สำหรับใช้งานจริง)"
