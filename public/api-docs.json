  ],
  "tags": [
    {
      "name": "Orders",
      "description": "Order management endpoints (จุดเชื่อมต่อสำหรับจัดการคำสั่งซื้อ)"
    },
    {
      "name": "Order Items",
      "description": "Order items management (จัดการรายการสินค้าในคำสั่งซื้อ)"
    },
    {
      "name": "Products",
      "description": "Product management endpoints (จุดเชื่อมต่อสำหรับจัดการสินค้า)"
    },
    {
      "name": "Customers",
      "description": "Customer management endpoints (จุดเชื่อมต่อสำหรับจัดการลูกค้า)"
    },
    {
      "name": "Analytics",
      "description": "Analytics and reporting endpoints (จุดเชื่อมต่อสำหรับการวิเคราะห์และรายงาน)"
    },
    {
      "name": "Inventory",
      "description": "Inventory management endpoints (จุดเชื่อมต่อสำหรับจัดการสต็อก)"
    },
    {
      "name": "Payments",
      "description": "Payment processing endpoints (จุดเชื่อมต่อสำหรับประมวลผลการชำระเงิน)"
    }
  ],
  "paths": {
    "/orders": {
      "get": {
        "tags": ["Orders"],
        "summary": "Get all orders (ดึงข้อมูลคำสั่งซื้อทั้งหมด)",
        "description": "Retrieve a list of orders with optional filtering (ดึงรายการคำสั่งซื้อพร้อมตัวกรองตามต้องการ)",
        "operationId": "getOrders",
        "parameters": [
          {
            "name": "customerId",
            "in": "query",
            "description": "Filter by customer ID (กรองตาม ID ลูกค้า)",
            "required": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "status",
            "in": "query",
            "description": "Filter by order status (กรองตามสถานะคำสั่งซื้อ)",
            "required": false,
            "schema": {
              "type": "string",
              "enum": ["all", "pending", "processing", "shipped", "delivered", "cancelled"]
            }
          },
          {
            "name": "channel",
            "in": "query",
            "description": "Filter by sales channel (กรองตามช่องทางการขาย)",
            "required": false,
            "schema": {
              "type": "string",
              "enum": ["all", "online", "offline", "mobile", "phone"]
            }
          },
          {
            "name": "search",
            "in": "query",
            "description": "Search by order ID or customer name (ค้นหาด้วย ID คำสั่งซื้อหรือชื่อลูกค้า)",
            "required": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "limit",
            "in": "query",
            "description": "Number of results to return (จำนวนผลลัพธ์ที่ต้องการ)",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 50,
              "minimum": 1,
              "maximum": 100
            }
          },
          {
            "name": "offset",
            "in": "query",
            "description": "Offset for pagination (ตำแหน่งเริ่มต้นสำหรับแบ่งหน้า)",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 0,
              "minimum": 0
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response (การตอบกลับสำเร็จ)",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Order"
                  }
                },
                "example": [
                  {
                    "id": "ORD-001",
                    "customerId": "CUST-001",
                    "customerName": "สมชาย ใจดี",
                    "items": [
                      {
                        "id": "ITEM-001",
                        "productId": "PROD-001",
                        "productName": "สินค้าตัวอย่าง",
                        "quantity": 2,
                        "price": 500
                      }
                    ],
                    "subtotal": 1000,
                    "tax": 70,
                    "shipping": 50,
                    "total": 1120,
                    "status": "processing",
                    "channel": "online",
                    "paymentMethod": "credit_card",
                    "shippingAddress": "123 ถนนสุขุมวิท กรุงเทพฯ 10110",
                    "notes": "กรุณาจัดส่งในช่วงบ่าย",
                    "createdAt": "2025-11-16T10:00:00Z",
                    "updatedAt": "2025-11-16T10:30:00Z"
                  }
                ]
              }
            }
          },
          "500": {
            "description": "Server error (ข้อผิดพลาดของเซิร์ฟเวอร์)",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ]
      },
      "post": {
        "tags": ["Orders"],
        "summary": "Create a new order (สร้างคำสั่งซื้อใหม่)",
        "description": "Create a new order with items (สร้างคำสั่งซื้อใหม่พร้อมรายการสินค้า)",
        "operationId": "createOrder",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateOrderRequest"
              },
              "example": {
                "customerId": "CUST-001",
                "customerName": "สมชาย ใจดี",
                "items": [
                  {
                    "productId": "PROD-001",
                    "productName": "สินค้าตัวอย่าง",
                    "quantity": 2,
                    "price": 500
                  }
                ],
                "subtotal": 1000,
                "tax": 70,
                "shipping": 50,
                "total": 1120,
                "status": "pending",
                "channel": "online",
                "paymentMethod": "credit_card",
                "shippingAddress": "123 ถนนสุขุมวิท กรุงเทพฯ 10110",
                "notes": "กรุณาจัดส่งในช่วงบ่าย"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Order created successfully (สร้างคำสั่งซื้อสำเร็จ)",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Order"
                }
              }
            }
          },
          "400": {
            "description": "Invalid request (ข้อมูลไม่ถูกต้อง)",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ]
      }
    },
    "/orders/{orderId}": {
      "get": {
        "tags": ["Orders"],
        "summary": "Get order by ID (ดึงข้อมูลคำสั่งซื้อด้วย ID)",
        "description": "Retrieve a specific order by its ID (ดึงข้อมูลคำสั่งซื้อเฉพาะด้วย ID)",
        "operationId": "getOrderById",
        "parameters": [
          {
            "name": "orderId",
            "in": "path",
            "description": "Order ID (ID คำสั่งซื้อ)",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response (การตอบกลับสำเร็จ)",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Order"
                }
              }
            }
          },
          "404": {
            "description": "Order not found (ไม่พบคำสั่งซื้อ)",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ]
      },
      "put": {
        "tags": ["Orders"],
        "summary": "Update order status (อัปเดตสถานะคำสั่งซื้อ)",
        "description": "Update the status of an order (อัปเดตสถานะของคำสั่งซื้อ)",
        "operationId": "updateOrderStatus",
        "parameters": [
          {
            "name": "orderId",
            "in": "path",
            "description": "Order ID (ID คำสั่งซื้อ)",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "status": {
                    "type": "string",
                    "enum": ["pending", "processing", "shipped", "delivered", "cancelled"],
                    "description": "New order status (สถานะใหม่ของคำสั่งซื้อ)"
                  }
                },
                "required": ["status"]
              },
              "example": {
                "status": "shipped"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Order status updated successfully (อัปเดตสถานะสำเร็จ)",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UpdateOrderStatusResponse"
                }
              }
            }
          },
          "400": {
            "description": "Invalid status transition (การเปลี่ยนสถานะไม่ถูกต้อง)",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "404": {
            "description": "Order not found (ไม่พบคำสั่งซื้อ)",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ]
      }
    },
    "/orders/{orderId}/items": {
      "get": {
        "tags": ["Order Items"],
        "summary": "Get order items (ดึงรายการสินค้าในคำสั่งซื้อ)",
        "description": "Retrieve all items in an order (ดึงรายการสินค้าทั้งหมดในคำสั่งซื้อ)",
        "operationId": "getOrderItems",
        "parameters": [
          {
            "name": "orderId",
            "in": "path",
            "description": "Order ID (ID คำสั่งซื้อ)",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response (การตอบกลับสำเร็จ)",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/OrderItem"
                  }
                },
                "example": [
                  {
                    "id": "ITEM-001",
                    "orderId": "ORD-001",
                    "productId": "PROD-001",
                    "productName": "สินค้าตัวอย่าง",
                    "quantity": 2,
                    "price": 500,
                    "discount": 0,
                    "notes": "",
                    "createdAt": "2025-11-16T10:00:00Z"
                  }
                ]
              }
            }
          },
          "404": {
            "description": "Order not found (ไม่พบคำสั่งซื้อ)",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ]
      },
      "post": {
        "tags": ["Order Items"],
        "summary": "Add item to order (เพิ่มรายการสินค้าในคำสั่งซื้อ)",
        "description": "Add a new item to an existing order (เพิ่มรายการสินค้าใหม่ในคำสั่งซื้อที่มีอยู่)",
        "operationId": "addOrderItem",
        "parameters": [
          {
            "name": "orderId",
            "in": "path",
            "description": "Order ID (ID คำสั่งซื้อ)",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/AddOrderItemRequest"
              },
              "example": {
                "productId": "PROD-002",
                "productName": "สินค้าใหม่",
                "quantity": 1,
                "price": 750,
                "discount": 50,
                "notes": "สินค้าพิเศษ"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Item added successfully (เพิ่มรายการสำเร็จ)",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/OrderItem"
                }
              }
            }
          },
          "400": {
            "description": "Invalid request or insufficient stock (ข้อมูลไม่ถูกต้องหรือสต็อกไม่เพียงพอ)",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "404": {
            "description": "Order or product not found (ไม่พบคำสั่งซื้อหรือสินค้า)",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ]
      }
    },
