      "item": [
        {
          "name": "List Orders",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{BASE_URL}}/api/orders?limit=50&offset=0&status=all",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "orders"],
              "query": [
                { "key": "limit", "value": "50" },
                { "key": "offset", "value": "0" },
                { "key": "status", "value": "all" },
                { "key": "customerId", "value": "", "disabled": true },
                { "key": "channel", "value": "", "disabled": true },
                { "key": "search", "value": "", "disabled": true }
              ]
            },
            "description": "Retrieve a paginated list of orders with optional filtering by customer, status, channel, or search query."
          },
          "response": []
        },
        {
          "name": "Get Order by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{BASE_URL}}/api/orders/:orderId",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "orders", ":orderId"],
              "variable": [
                { "key": "orderId", "value": "" }
              ]
            },
            "description": "Retrieve a specific order by its ID."
          },
          "response": []
        },
